{% extends 'base.html.twig' %}

{% block title %}Librairie de jeux de société!{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1 class="text-center mt-5 mb-5">
        <i class="bi bi-dice-6"></i> 
        Librairie de jeux de société 
        <i class="bi bi-dice-6"></i>
    </h1>

    <div class="d-flex justify-content-center mb-5">
        <a href="{{ path('app_game_index') }}" class="btn btn-primary btn-lg">Voir les jeux</a>
    </div>

    <div class="d-flex justify-content-center">
        <h2 class="mt-5">Effectuer une recherche</h2>
    </div>
    <div class="d-flex justify-content-center">
        <form action="{{ path('app_home')}}" class="mt-5">
            <div class="custom-select-wrapper">
                <select name="searchCategory" id="searchCategory">
                    <option value="">-- Catégorie --</option>
                    {% for category in categories %}
                        <option value="{{ category.id }}">{{ category.name }}</option>
                    {% endfor %}
                </select>
                <i class="bi bi-chevron-down custom-select-icon"></i>
            </div>
            <div class="custom-select-wrapper">
                <select name="searchNbPlayers" id="searchNbPlayers">
                    <option value="">-- Temps de jeu --</option>
                    {% for nbPlayer in nbPlayers %}
                        <option value="{{ nbPlayer.id }}">{{ nbPlayer.getPlayersLabel }}</option>
                    {% endfor %}
                </select>
                <i class="bi bi-chevron-down custom-select-icon"></i>
            </div>
            <div class="custom-select-wrapper">
                <select name="searchGameDuration" id="searchGameDuration">
                    <option value="">-- Durée de jeu --</option>
                    {% for game in games %}
                        <option value="{{ game.id }}">{{ game.getDuration }}</option>
                    {% endfor %}
                </select>
                <i class="bi bi-chevron-down custom-select-icon"></i>
            </div>
            <div class="custom-select-wrapper">
                <select name="searchGameLastDatePlayed" id="searchGameLastDatePlayed">
                    <option value="">-- Dernière partie jouée --</option>
                    {% for game in games %}
                        <option value="{{ game.id }}">{{ game.getLastDatePlayed }}</option>
                    {% endfor %}
                </select>
                <i class="bi bi-chevron-down custom-select-icon"></i>
            </div>


            <button type="submit" id="go" title="Go"><i class="bi bi-search"></i></button>
        </form>
    </div>
    
</div>
{% endblock %}