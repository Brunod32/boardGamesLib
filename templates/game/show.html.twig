{% extends 'base.html.twig' %}

{% block title %}Jeux{% endblock %}

{% block body %}
    {% include 'navbar.html.twig' %}
    <h1>Jeux</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Nom du jeux</th>
                <td>{{ game.name }}</td>
            </tr>
            <tr>
                <th>Durée de jeu</th>
                <td>{{ game.duration }}</td>
            </tr>
            <tr>
                <th>Dernière date de jeu</th>
                <td>{{ game.lastDatePlayed ? game.lastDatePlayed|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_game_index') }}">Retour à la liste</a>

    <a href="{{ path('app_game_edit', {'id': game.id}) }}">Modifier</a>

    {{ include('game/_delete_form.html.twig') }}
{% endblock %}
