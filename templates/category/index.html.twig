{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <h1 class="text-center mt-5 mb-5">Categories</h1>

    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    {# <th>actions</th> #}
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    {# <td>
                        <a href="{{ path('app_category_show', {'id': category.id}) }}">show</a>
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>
                    </td> #}
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_category_new') }}" class="btn btn-outline-primary">Créer une catégorie</a>
    </div>
{% endblock %}
